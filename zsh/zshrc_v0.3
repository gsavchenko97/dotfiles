export ZSH="/home/glebka97/.oh-my-zsh"

# updates requency
export UPDATE_ZSH_DAYS=14

# oh-my-zsh theme
ZSH_THEME="xpahos"

# oh-my-zsh plugins list
plugins=(
    git
    zsh-autosuggestions
    zsh-syntax-highlighting
)

# alias for neovim
alias vim="nvim"

# alias for clang
alias clang++="clang++-13"

# alias for arcadia usage
alias arc-mount="arc mount -m $HOME/arcadia -S $HOME/store --object-store $HOME/object-store"

# alias for freeze microphone sound level on ubuntu
alias mic-sound="while sleep 0.1; do pacmd set-source-volume alsa_input.pci-0000_00_1f.3.analog-stereo 25000; done"

# setup for time utility
export TIMEFMT=$'\nreal\t%E\nuser\t%U\nsys\t%S'

# setup for less utility
export LESS='-R'
export LESSOPEN='|~/.lessfilter %s'

# setup for fzf utility
bindkey '^ ' autosuggest-accept
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

source $ZSH/oh-my-zsh.sh
