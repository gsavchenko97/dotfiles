#!/bin/sh
case "$1" in
    *.awk|*.groff|*.java|*.js|*.m4|*.php|*.pl|*.pm|*.pod|\
    *.ad[asb]|*.asm|*.inc|\
    *.lsp|*.l|*.pas|*.p|*.xml|*.xps|*.xsl|*.axp|*.ppd|*.pov|\
    *.diff|*.patch|*.rb|*.sql|*.ebuild|*.eclass)
        pygmentize -f 256 -O style=monokai "$1";;

    *.py)
        pygmentize -f 256 -l py -O style=monokai "$1";;

    *.[ch]|*.[ch]pp|*.[ch]xx|*.cc|*.hh)
        pygmentize -f 256 -l cpp -O style=monokai "$1";;

    .bashrc|.bash_aliases|.bash_environment|*.sh)
        pygmentize -f 256 -l sh -O style=monokai "$1";;

    *)
        if grep -q "#\!/bin/bash" "$1" 2> /dev/null; then
            pygmentize -f 256 -l sh "$1"
        else
            pygmentize -f 256 -O style=monokai "$1"
        fi
esac

exit 0
